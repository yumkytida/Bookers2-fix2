<div class="col-xs-3">
<%= render 'layouts/index', user:@user, book:@book_new %>
</div>
<div class='col-xs-9'>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th><h2>Book detail<h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
	<tr>
	<td><%= link_to user_path(@book.user) do %>
	<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50",  class: "pull-left profile-img", fallback: "no_image.jpg" %><br><br><br>
	<%= @book.user.name %>
	<% end %>
	</td>
	<td><%= link_to @book.title, book_path(@book) %></td>
	<td><%= @book.body %></td>
	<% if @book.user == current_user %>
	<td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
	<td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", data:{confirm: "Are you sureï¼Ÿ"} %></td>
	<% end %>
	</tr>
</tbody>